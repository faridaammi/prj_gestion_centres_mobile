<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"

    android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="116dp"
                        android:id="@+id/img_salle"
                        android:layout_margin="4dp"
                        android:layout_height="97dp"
                        android:src="@drawable/rectangleorange"
                        />
                    <TextView
                        android:id="@+id/SALLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:text="Salle lecture"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/capacite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:text="Capacité :"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            />
                        <TextView
                            android:id="@+id/capacitesalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:text="nb? personnes"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#5669FF"
                            android:textSize="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/Numero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:text="N° :"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            />
                        <TextView
                            android:id="@+id/numsalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:text="numsalle?"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#5669FF"
                            android:textSize="8dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:text="Equipement :"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        />

                    <ImageView
                        android:layout_width="116dp"
                        android:layout_height="71dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/equipement" />


                </LinearLayout>


</androidx.cardview.widget.CardView>


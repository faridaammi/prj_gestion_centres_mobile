<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="239.61dp"
    android:layout_height="319dp"
    android:layout_margin="10dp"
    android:layout_marginTop="15dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardvfavoris"
            android:layout_width="218dp"
            android:layout_height="211dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/imgcentre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_centre"
                android:orientation="vertical" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_centrenom"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/black"
            android:text="CEFT IBN ZOHR - TIZNIT"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/imglocalisation"/>
            <TextView
                android:id="@+id/centreaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="13dp"
                android:text="42 AL MASSIRA - TIZNIT"/>



        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>